<mvc:View controllerName="bts.btsapp.controller.Welcome"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" class="pageContainer">
        <content>
            <FlexBox class="boxContainer" alignContent="Center" justifyContent="Center" width="100%" height="100%">
                <VBox 
                    class="sapUiMediumMargin formContainer" 
                    alignContent="Center" 
                    justifyContent="Center" 
                    visible="{view>/showLoginForm}"
                    width="25%"
                    height="25rem"
                >
                    <HBox 
                        class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
                        alignItems="Center" 
                        justifyContent="SpaceBetween"
                    >
                        <core:Icon
                            src="sap-icon://account"
                            class="size3" 
                        />
                        <Label
                            text="Username: "
                            labelFor="usernameLogIn"
                        />
                        <Input 
                            id="usernameLogIn"
                            type="Text"
                            required="true"
                        />
                    </HBox>
                    
                    <HBox 
                        class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
                        alignItems="Center" 
                        justifyContent="SpaceBetween"
                    >
                        <core:Icon
                            src="sap-icon://shield"
                            class="size3" 
                        />
                        <Label
                            text="Password: "
                            labelFor="passwordLogIn"
                        />
                        <Input 
                            id="passwordLogIn"
                            type="Password"
                            required="true"
                        />
                    </HBox>

                    <HBox  
                        class="sapUiLargeMarginStart sapUiLargeMarginEnd"
                        alignItems="Center" 
                        justifyContent="Center"
                    >
                        <Button
                            text="Log in"
                            press="onPressLogin"
                            class="sapUiSmallMargin"
                        />
                    </HBox>

                    <HBox  
                        class=" sapUiLargeMarginTop"
                        alignItems="Center" 
                        justifyContent="Center"
                    >
                        <Button
                            text="Don't have an account? Sign up"
                            press="onPressShowSignup"
                            class="sapUiSmallMargin"
                            width="100%"
                        />
                    </HBox>
                </VBox>

                <VBox 
                    class="sapUiMediumMargin formContainer" 
                    alignContent="Center" 
                    justifyContent="Center" 
                    visible="{view>/showSignupForm}"
                    width="25%"
                    height="30rem"
                >
                    <HBox 
                        class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
                        alignItems="Center" 
                        justifyContent="SpaceBetween"
                    >
                        <core:Icon
                            src="sap-icon://account"
                            class="size3" 
                        />
                        <Label
                            text="Username: "
                            labelFor="usernameSignUp"
                        />
                        <Input 
                            id="usernameSignUp"
                            type="Text"
                            required="true"
                        />
                    </HBox>
                    
                    <HBox 
                        class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
                        alignItems="Center" 
                        justifyContent="SpaceBetween"
                    >
                        <core:Icon
                            src="sap-icon://shield"
                            class="size3" 
                        />
                        <Label
                            text="Password: "
                            labelFor="passwordSignUp"
                        />
                        <Input 
                            id="passwordSignUp"
                            type="Password"
                            required="true"
                        />
                    </HBox>

                    <HBox  
                        class="sapUiLargeMarginStart sapUiLargeMarginEnd"
                        alignItems="Center" 
                        justifyContent="Center"
                    >
                        <Button
                            text="Sign up"
                            press="onPressSignup"
                            class="sapUiSmallMargin"
                        />
                    </HBox>

                    <HBox  
                        class="sapUiLargeMarginStart sapUiLargeMarginEnd sapUiLargeMarginTop"
                        alignItems="Center" 
                        justifyContent="SpaceBetween"
                    >
                        <Button
                            text="Already have an account? Log in"
                            press="onPressShowLogin"
                            class="sapUiSmallMargin"
                            width="100%"
                        />
                    </HBox>
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
