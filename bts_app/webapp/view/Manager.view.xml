<mvc:View controllerName="bts.btsapp.controller.Manager"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Panel headerText="{i18n>managerPanel}" class="sapUiResponsiveMargin" width="auto">
        <Toolbar>
            <ToolbarSpacer />
            <Button text="View My Trips" press="onViewMyTrips" type="Emphasized" />
            <Button text="Logout" press="onLogout" type="Emphasized" />
        </Toolbar>

        <IconTabBar id="idIconTabBar" select=".onFilterSelect" class="sapUiResponsiveContentPadding">
            <items>
                <IconTabFilter text="All" key="all" icon="sap-icon://expand-all" />
                <IconTabFilter icon="sap-icon://accept" iconColor="Positive" text="Approved" key="Ok">
                    <Toolbar>
                        <Label text="Location" />
                        <Input id="locationFilterApproved" width="15%" />
                        <Label text="Date" />
                        <DatePicker id="dateFilterApproved" width="15%" />
                        <Label text="Name" />
                        <Input id="nameFilterApproved" width="15%" />
                        <Button text="Filter" press="onFilterTripsA" />
                        <Button text="Clear" press="onClearFilterA" />
                    </Toolbar>
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://in-progress" iconColor="Critical" text="In process" key="In process">
                    <Toolbar>
                        <Label text="Location" />
                        <Input id="locationFilterIP" width="15%" />
                        <Label text="Date" />
                        <DatePicker id="dateFilterIP" width="15%" />
                        <Label text="Name" />
                        <Input id="nameFilterIP" width="15%" />
                        <Button text="Filter" press="onFilterTrips" />
                        <Button text="Clear" press="onClearFilter" />
                    </Toolbar>
                </IconTabFilter>
                <IconTabFilter icon="sap-icon://status-critical" iconColor="Negative" text="Denied" key="Denied">
                    <Toolbar>
                        <Label text="Location" />
                        <Input id="locationFilterD" width="15%" />
                        <Label text="Date" />
                        <DatePicker id="dateFilterD" width="15%" />
                        <Label text="Name" />
                        <Input id="nameFilterD" width="15%" />
                        <Button text="Filter" press="onFilterTrips" />
                        <Button text="Clear" press="onClearFilter" />
                    </Toolbar>
                </IconTabFilter>
            </items>
        </IconTabBar>
        <Table id="btTable" headerText="All business trips are displayed below" items="{allTrips>/combinedData}">
            <columns>
                <Column>
                    <header>
                        <Label text="Name" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Date" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Total Price" />
                    </header>
                </Column>
                <Column>
                    <header>
                        <Label text="Status" />
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onTableRowSelection">
                    <cells>
                        <Text text="{allTrips>FIRST_NAME}" />
                        <Text text="{
                            path: 'allTrips>START_DATE',
                            formatter: '.formatDate'
                        }" />
                        <Text text="{allTrips>TOTAL_PRICE}" />
                        <Text text="{allTrips>ACCEPTED}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>
