<mvc:View controllerName="bts.btsapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox 
        class="sapUiMediumMargin formContainer" 
        alignContent="Center" 
        justifyContent="Center"
        width="25%"
        height="25rem"
    >
        <HBox 
            class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
        >
            <core:Icon
                src="sap-icon://account"
                class="size3" 
            />
            <Label
                text="Username: "
                labelFor="usernameLogIn"
            />
            <Input 
                id="usernameLogIn"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
        >
            <core:Icon
                src="sap-icon://shield"
                class="size3" 
            />
            <Label
                text="Password: "
                labelFor="passwordLogIn"
            />
            <Input 
                id="passwordLogIn"
                type="Password"
                required="true"
            />
        </HBox>

        <HBox  
            class="sapUiLargeMarginStart sapUiLargeMarginEnd"
            alignItems="Center" 
            justifyContent="Center"
        >
            <Button
                text="Log in"
                press="onPressLogin"
                class="sapUiSmallMargin"
            />
        </HBox>

        <HBox  
            class="sapUiLargeMarginTop"
            alignItems="Center" 
            justifyContent="Center"
        >
            <Button
                text="Don't have an account? Sign up"
                press="onPressShowSignup"
                class="sapUiSmallMargin"
                width="100%"
            />
        </HBox>
    </VBox>
</mvc:View>
