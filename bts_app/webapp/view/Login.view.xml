<mvc:View controllerName="bts.btsapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox 
        class="formContainer" 
        alignItems="Center"
    >

        <FormattedText 
            class="sapUiMediumMargin"
            htmlText="{/customLogInHTML}"
            width="100%"
        />

        <HBox 
            class="sapUiMediumMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://account"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Username"
                labelFor="usernameLogIn"
            />
            <Input 
                id="usernameLogIn"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin sapUiMediumMarginBottom"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://locked"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Password"
                labelFor="passwordLogIn"
            />
            <Input 
                id="passwordLogIn"
                type="Password"
                required="true"
            />
        </HBox>

        <Button
            class="sapUiSmallMargin sapUiLargeMarginTop"
            text="Log in"
            press="onPressLogin"
            type="Emphasized"
        />

        <Button
            class="sapUiSmallMargin"
            text="Don't have an account? Sign up"
            press="onPressShowSignup"
        />
    </VBox>
</mvc:View>
