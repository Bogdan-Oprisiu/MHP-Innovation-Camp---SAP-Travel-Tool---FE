<mvc:View controllerName="bts.btsapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox 
        class="formContainer" 
        alignItems="Center"
    >

        <Title 
            class="sapUiMediumMargin"
            text="{i18n>loginTitle}"
            level="H2" 
            titleStyle="H2" 
        />

        <!-- Use simple form -->
        <HBox 
            class="sapUiMediumMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://account"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="{i18n>usernameLabel}"
                labelFor="usernameLogIn"
            />
            <Input 
                id="usernameLogIn"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin sapUiMediumMarginBottom"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://locked"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="{i18n>passwordLabel}"
                labelFor="passwordLogIn"
            />
            <Input 
                id="passwordLogIn"
                type="Password"
                required="true"
            />
        </HBox>

        <Button
            class="sapUiSmallMargin sapUiLargeMarginTop"
            text="{i18n>logInButton}"
            press="onPressLogin"
            type="Emphasized"
        />

        <Button
            class="sapUiSmallMargin"
            text="{i18n>showSignupButton}"
            press="onPressShowSignup"
        />
    </VBox>
</mvc:View>
