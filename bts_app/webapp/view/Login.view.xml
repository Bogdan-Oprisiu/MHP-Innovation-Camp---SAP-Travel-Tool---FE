<mvc:View controllerName="bts.btsapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox 
        class="formContainer" 
        alignItems="Center"
    >
        <FormattedText 
            class="sapUiMediumMargin"
            htmlText="{/customLogInHTML}"
        />

        <HBox 
            class="sapUiSmallMargin sapUiMediumMarginTop"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="75%"
        >
            <core:Icon
                src="sap-icon://account"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Username"
                labelFor="usernameLogIn"
            />
            <Input 
                id="usernameLogIn"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="75%"
        >
            <core:Icon
                src="sap-icon://shield"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Password"
                labelFor="passwordLogIn"
            />
            <Input 
                id="passwordLogIn"
                type="Password"
                required="true"
            />
        </HBox>

        <HBox 
            alignItems="Center"
            justifyContent="SpaceBetween"
        >
            <Label 
                text="Manager" 
                labelFor="isManagerLogIn"
            />
            <CheckBox 
                id="isManagerLogIn"
                valueState="Information"
            />
            <Button
                class="sapUiSmallMargin"
                text="Log in"
                press="onPressLogin"
                type="Emphasized"
            />
        </HBox>

        <Button
            class="sapUiSmallMargin"
            text="Don't have an account? Sign up"
            press="onPressShowSignup"
        />
    </VBox>
</mvc:View>
