<mvc:View controllerName="bts.btsapp.controller.Signup"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox 
        class="formContainer" 
        alignItems="Center"
    >

        <Title 
            class="sapUiMediumMargin"
            text="{i18n>signupTitle}"
            level="H2" 
            titleStyle="H2" 
        />

        <HBox 
            class="sapUiSmallMargin sapUiMediumMarginTop"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://account"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="{i18n>usernameLabel}"
                labelFor="usernameSignUp"
            />
            <Input 
                id="usernameSignUp"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://locked"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="{i18n>passwordLabel}"
                labelFor="passwordSignUp"
            />
            <Input 
                id="passwordSignUp"
                type="Password"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="55%"
        >
            <core:Icon
                src="sap-icon://shield"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="{i18n>confirmPasswordLabel}"
                labelFor="passwordConfirmSignUp"
            />
            <Input 
                id="passwordConfirmSignUp"
                type="Password"
                required="true"
            />
        </HBox>

        <Button
            class="sapUiSmallMargin"
            text="{i18n>signUpButton}"
            press="onPressSignup"
            type="Emphasized"
        />

        <Button
            class="sapUiSmallMargin"
            text="{i18n>showLoginButton}"
            press="onPressShowLogin"
        />
    </VBox>
</mvc:View>
