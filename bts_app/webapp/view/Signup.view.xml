<mvc:View controllerName="bts.btsapp.controller.Signup"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <VBox 
        class="formContainer" 
        alignItems="Center"
    >

        <FormattedText 
            class="sapUiMediumMargin"
            htmlText="{/customSignupHTML}"
            width="100%"
        />

        <HBox 
            class="sapUiSmallMargin sapUiMediumMarginTop"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://account"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Username: "
                labelFor="usernameSignUp"
            />
            <Input 
                id="usernameSignUp"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="50%"
        >
            <core:Icon
                src="sap-icon://locked"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Password: "
                labelFor="passwordSignUp"
            />
            <Input 
                id="passwordSignUp"
                type="Password"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
            width="55%"
        >
            <core:Icon
                src="sap-icon://shield"
                class="sapUiTinyMarginEnd size3" 
            />
            <Label
                text="Confirm Password: "
                labelFor="passwordConfirmSignUp"
            />
            <Input 
                id="passwordConfirmSignUp"
                type="Password"
                required="true"
            />
        </HBox>

        <Button
            class="sapUiSmallMargin"
            text="Sign up"
            press="onPressSignup"
            type="Emphasized"
        />

        <Button
            class="sapUiSmallMargin"
            text="Already have an account? Log in"
            press="onPressShowLogin"
        />
    </VBox>
</mvc:View>
