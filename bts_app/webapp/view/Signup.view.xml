<mvc:View controllerName="bts.btsapp.controller.Signup"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox 
        class="sapUiMediumMargin formContainer" 
        alignContent="Center" 
        justifyContent="Center"
        width="25%"
        height="30rem"
    >
        <HBox 
            class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
        >
            <core:Icon
                src="sap-icon://account"
                class="size3" 
            />
            <Label
                text="Username: "
                labelFor="usernameSignUp"
            />
            <Input 
                id="usernameSignUp"
                type="Text"
                required="true"
            />
        </HBox>

        <HBox 
            class="sapUiMediumMarginStart sapUiMediumMarginEnd sapUiSmallMargin"
            alignItems="Center" 
            justifyContent="SpaceBetween"
        >
            <core:Icon
                src="sap-icon://shield"
                class="size3" 
            />
            <Label
                text="Password: "
                labelFor="passwordSignUp"
            />
            <Input 
                id="passwordSignUp"
                type="Password"
                required="true"
            />
        </HBox>

        <HBox  
            class="sapUiLargeMarginStart sapUiLargeMarginEnd"
            alignItems="Center" 
            justifyContent="Center"
        >
            <Button
                text="Sign up"
                press="onPressSignup"
                class="sapUiSmallMargin"
            />
        </HBox>

        <HBox  
            class="sapUiLargeMarginStart sapUiLargeMarginEnd sapUiLargeMarginTop"
            alignItems="Center" 
            justifyContent="SpaceBetween"
        >
            <Button
                text="Already have an account? Log in"
                press="onPressShowLogin"
                class="sapUiSmallMargin"
                width="100%"
            />
        </HBox>
    </VBox>
</mvc:View>
